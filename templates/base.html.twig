<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <title>{% block title %}TiPampa{% endblock %}</title>
        <link rel="icon" href="https://res.cloudinary.com/greengo-production/image/upload/f_auto,c_limit,w_1440,q_auto/pictures/accommmodation/ordered_images/tipampa.png">

        <!--====================================ICONS=======================================-->
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/line.css">
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/solid.css">

        <!--====================================STYLE=======================================-->
        <link rel="stylesheet" href="{{ asset('assets/style/base.css')}}" alt="">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <!--====================================NAVBAR=======================================-->
        
        <header class="header">
            <a class="logo">
                <img src="{{ asset('assets/images/tipampa_logo.png')}}" class="nav_logo" alt="">
            </a>


            <nav class="navbar">

                <a href="{{ path('home') }}" class="nav_link">
                    Accueil
                </a>

                <a href="{{ path('teepee') }}"  class="nav_link">
                    Les Tipis
                </a>

                <a href="{{ path('common') }}"  class="nav_link">
                    Espaces Communs
                </a>

                <a href="{{ path('activities') }}"  class="nav_link">
                    Activités
                </a>

                <a href="{{ path('services') }}"  class="nav_link">
                    Nos Services
                </a>

                <a href="{{ path('about') }}"  class="nav_link">
                    A Propos
                </a>

                <a href="{{ path('rate') }}"  class="nav_link">
                    Tarifs
                </a>

                <a href="{{ path('contact') }}"  class="nav_link">
                    Nous Contacter
                </a>

                
            </nav>

            <div class="nav_btn">   
                <i class="uil uil-sun" id="theme_button"></i>
            </div>

        </header>

        {% block welcome %}

        {% endblock %}

        {% block mention %}

        {% endblock %}

        {% block teepee %}

        {% endblock %}

        {% block teepee_double %}

        {% endblock %}

        {% block teepee_sup %}

