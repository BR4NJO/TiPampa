        {% endblock %}

        {% block faq %}

        {% endblock %}

        {% block rate %}

        {% endblock %}

        {% block contact %}

        {% endblock %}


        <!--====================================SLIDER INSTA=======================================-->
        
        <div class="image_container">
            <img src="{{ asset('assets/images/PHOTO-2024-01-16-16-05-54_3.jpg')}}" alt="tippampa" id="slide">
            <img src="{{ asset('assets/images/PHOTO-2024-01-16-16-05-54_2.jpg')}}" alt="tippampa" id="slide">
            <img src="{{ asset('assets/images/PHOTO-2024-01-16-16-05-54_4.jpg')}}" alt="tippampa" id="slide">
            <img src="{{ asset('assets/images/PHOTO-2024-01-16-16-05-54_1.jpg')}}" alt="tippampa" id="slide">
        </div>

        <div class="insta-button">
            <a class="oval-button" href="https://www.instagram.com/tipampa_40/" target="_blank">
               Plus d'images sur notre Instagram
            </a>
        </div>


        <!--====================================FOOTER=======================================-->

        <footer class="footer">
            <div class="adress">
                <div class="contact">
                    <li class="contact_list">
                        <i class="uil uil-location-point footer_button"></i>
                        <a href="https://fr.mappy.com/poi/6481ced6e6203144d11ad5eb" class="footer_link">
                            Chemin de Tuyerrot, 40350 Pouillon, France
                        </a>
                    </li>

                    <li class="contact_list">
                        <i class="uil uil-phone footer_button"></i>
                        <a href="tel:0682478630" class="footer_link">
                            Cliquez pour appeler
                        </a>
                    </li>

                    <li class="contact_list">
                        <i class="uil uil-envelope footer_button" ></i>
                        <a href="mailto:aquasword60@icloud.com" class="footer_link">
                            Tipampa.tipi@gmail.com
                        </a>
                    </li>

                </div>

                <div class="logo_footer">
                    <a class="footer_logo">
                        <img src="{{ asset('assets/images/tipampa_logo.png')}}" alt="">
                    </a>
                </div>

                <div class="socials"> 
                    <h1 class="subtext">Suivez nous sur nos différents réseaux !</h1>
                    <div class="socials_list">
                        <a href="">
                            <i class="uil uil-facebook" target="_blank"></i>
                        </a>
                        <a href="" target="_blank">
                            <i class="uil uil-twitter"></i>
                        </a>
                        <a href="https://www.instagram.com/tipampa_40/" target="_blank">
                            <i class="uil uil-instagram-alt"></i>
                        </a>
                        <a href="https://www.booking.com/hotel/fr/tipampa.fr.html" target="_blank">
                            <img src="{{ asset('assets/images/booking.png')}}" alt="">
                        </a>
                    </div>
                </div>
            </div>

            <div class="border"></div>


            <div class="legal">
                <div class="legal_content">
                    <a href="{{ path('mention') }}">Mentions légales</a>
                    <a>Conditions générales</a>
                    <a>Politique de protection des données personnelles</a>
                    <a>Paiement sécurisé Labels et partenaires</a>
                    <a>Gérez votre consentement</a>
                <div>
            </div>
        </footer>

        <!--====================================JS=======================================-->
        <script src="{{ asset('assets/js/main.js')}}"></script>
    </body>
</html>
